<%- include('../Partials/header') %>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <!-- Header -->
<%- include('../Partials/nav') %>
    <!-- Hero Section -->
    <section class="bg-rose-500 text-white py-32 relative">
      <div class="max-w-5xl mx-auto text-center px-6">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">
          Explore the world's best homes
        </h2>
        <p class="text-lg md:text-xl mb-8">
          Book unique homes and experiences all around the world.
        </p>
        <a
          href="/add-home"
          class="inline-block px-8 py-4 bg-white text-rose-500 font-semibold rounded-full hover:bg-gray-100 transition"
        >
          Add Your Home
        </a>
      </div>
    </section>

    <!-- Featured Listings -->
    <section class="max-w-7xl mx-auto px-6 py-16">
      <h3 class="text-2xl font-bold mb-8">Registered Homes</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        <% registerHomes.forEach(home => { %>

        <div
          class="bg-white rounded-2xl shadow hover:shadow-lg transition overflow-hidden"
        >
          <div class="p-4">
            <h4 class="text-lg font-semibold mb-2"><%= home.houseName %></h4>
            <p class="text-gray-600 mb-2"><%= home.localion %></p>
            <p class="font-bold text-gray-800">$<%= home.price %> / night</p>
          </div>
        </div>

        <% }) %>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="bg-gray-200 py-16 text-center">
      <h3 class="text-3xl font-bold mb-6">Become a Host</h3>
      <p class="mb-8 text-gray-700">
        Earn money by sharing your extra space with travelers.
      </p>
      <a
        href="/add-home"
        class="inline-block px-8 py-4 bg-rose-500 text-white font-semibold rounded-full hover:bg-rose-600 transition"
      >
        Start Hosting
      </a>
    </section>

    <!-- Footer -->
    <footer class="bg-white shadow mt-16">
      <div
        class="max-w-7xl mx-auto px-6 py-6 text-center text-gray-600 text-sm"
      >
        &copy; 2026 Airbnb Clone. All rights reserved.
      </div>
    </footer>
  </body>
</html>
 