<%- include('../Partials/header') %>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <!-- Header -->
<%- include('../Partials/nav') %>
    <!-- Main Content -->
    <main class="max-w-2xl mx-auto px-6 py-20">
      <div class="bg-white p-10 md:p-12 rounded-3xl shadow-lg">
        <!-- Title -->
        <h2
          class="text-2xl md:text-3xl font-bold text-gray-800 mb-8 text-center"
        >
        <%= editing ? "Edit" : "Register" %> Your Home
        </h2>

        <!-- Description -->
        <p class="text-gray-600 mb-8 text-center">
          Fill in the details below to list your property on Airbnb.
        </p>

        <!-- Form -->
<form action="/<%= editing ? "edit-home" : "add-home" %>" method="POST" class="space-y-6">
  <input type="hidden" name="id" value="<%= editing ? home.id : '' %>">


  <!-- House Name -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">
      House Name
    </label>
    <input
      type="text"
      name="name"
      value="<%= editing ? home.houseName : '' %>"
      placeholder="Enter house name"
      required
      class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-transparent transition"
    />
  </div>

  <!-- Location -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">
      Location
    </label>
    <input
      type="text"
      name="location"
      value="<%= editing ? home.localion : '' %>"
      placeholder="City, State"
      required
      class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-transparent transition"
    />
  </div>

  <!-- Price -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">
      Price per Night ($)
    </label>
    <input
      type="number"
      name="price"
      value="<%= editing ? home.price : '' %>"
      placeholder="100"
      min="1"
      required
      class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-transparent transition"
    />
  </div>

  <!-- Rating -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">
      Rating (1 to 5)
    </label>
    <input
      type="number"
      name="rating"
      placeholder="4.5"
      value="<%= editing ? home.rating : '' %>"
      min="1"
      max="5"
      step="0.1"
      required
      class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-transparent transition"
    />
  </div>

  <!-- Photo URL -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-2">
      Photo URL
    </label>
    <input
      type="url"
      name="photoUrl"
      value="<%= editing ? home.photoUrl : ''   %>"
      placeholder="https://example.com/image.jpg"
      required
      class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-rose-400 focus:border-transparent transition"
    />
  </div>

  <!-- Submit -->
  <button
    type="submit"
    class="w-full py-3 rounded-xl bg-rose-500 text-white font-semibold hover:bg-rose-600 transition shadow-lg hover:shadow-xl"
  >
    <%= editing ? "Update Home" : "Register Home" %>
  </button>
</form>

      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white shadow mt-16">
      <div
        class="max-w-5xl mx-auto px-6 py-6 text-center text-gray-600 text-sm"
      >
        &copy; 2026 Airbnb Clone. All rights reserved.
      </div>
    </footer>
  </body>
</html>
