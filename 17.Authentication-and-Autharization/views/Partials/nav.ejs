<header class="bg-white shadow-sm sticky top-0 z-50 border-b">
  <div class="max-w-7xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo - Simple and Clean -->
      <a href="/" class="flex items-center">
        <span class="text-2xl font-bold text-rose-500">airbnb</span>
      </a>

      <!-- Center Navigation -->
      <nav class="flex items-center space-x-2">

        <% if(isLoggedIn) { %>


          <a href="/home-list"
            class="px-5 py-3 text-gray-700 font-medium hover:text-rose-500 hover:bg-gray-50 rounded-full transition duration-200">
            Home List
          </a>
          <a href="/favroute"
            class="px-5 py-3 text-gray-700 font-medium hover:text-rose-500 hover:bg-gray-50 rounded-full transition duration-200">
            Favorites
          </a>
          <a href="/booking"
            class="px-5 py-3 text-gray-700 font-medium hover:text-rose-500 hover:bg-gray-50 rounded-full transition duration-200">
            Booking
          </a>
          <a href="/host-home-list"
            class="px-5 py-3 text-gray-700 font-medium hover:text-rose-500 hover:bg-gray-50 rounded-full transition duration-200">
            Host Home
          </a>
          <a href="/add-home"
            class="px-5 py-3 text-gray-700 font-medium hover:text-rose-500 hover:bg-gray-50 rounded-full transition duration-200">
            Add Home
          </a>
          <% } %>
      </nav>

      <!-- Right Side - Login -->
      <% if (isLoggedIn) { %>
        <!-- <% (console.log("User is logged in" , isLoggedIn)) %> -->
        <div class="flex items-center space-x-3">
          <form action="/logout" method="POST">
            <button type="submit"
              class="px-6 py-2.5 text-white font-medium bg-gradient-to-r from-rose-500 to-pink-500 hover:from-rose-600 hover:to-pink-600 rounded-full transition-all duration-300 shadow-sm hover:shadow-md">
              Logout
            </button>
          </form>
        </div>
        <% } else { %>
          <div class="flex items-center space-x-3">
            <a href="/login"
              class="px-6 py-2.5 text-white font-medium bg-gradient-to-r from-rose-500 to-pink-500 hover:from-rose-600 hover:to-pink-600 rounded-full transition-all duration-300 shadow-sm hover:shadow-md">
              Login
            </a>
          </div>
          <% } %>
    </div>
  </div>
</header>