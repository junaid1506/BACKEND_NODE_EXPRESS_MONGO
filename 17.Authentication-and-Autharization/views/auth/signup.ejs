<%- include('../Partials/header') %>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <!-- Navbar -->
    <%- include('../Partials/nav') %>

    <!-- Main Content -->
    <div class="min-h-[calc(100vh-80px)] flex items-center justify-center p-4">
      <div class="w-full max-w-md">
        <!-- Signup Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
          <!-- Header -->
          <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Join us</h1>
            <p class="text-gray-600">Create your account</p>
          </div>

          <!-- Error Messages -->
          <% if (typeof errorMessages !== 'undefined' && errorMessages.length > 0) { %>
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
              <div class="flex items-start">
                <i class="fas fa-exclamation-circle text-red-500 mt-0.5 mr-3"></i>
                <div>
                  <h3 class="font-medium text-red-800 mb-1">Please fix the following errors:</h3>
                  <ul class="text-sm text-red-700 list-disc pl-4 space-y-1">
                    <% errorMessages.forEach(error => { %>
                      <li><%= error.msg %></li>
                    <% }) %>
                  </ul>
                </div>
              </div>
            </div>
          <% } %>

          <!-- Signup Form -->
          <form action="/signup" method="POST" class="space-y-6" novalidate>
            <!-- Name Input -->
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Full Name
              </label>
              <div class="relative">
                <div
                  class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                >
                  <i class="fas fa-user text-gray-400"></i>
                </div>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  value="<%= typeof oldInput !== 'undefined' ? oldInput.name : '' %>"
                  class="w-full pl-10 pr-4 py-3 border <%= typeof errorMessages !== 'undefined' && errorMessages.find(e => e.param === 'name') ? 'border-red-300 focus:border-red-500 focus:ring-red-500' : 'border-gray-300 focus:ring-rose-500 focus:border-rose-500' %> rounded-lg focus:ring-2 transition-all duration-200 outline-none"
                  placeholder="John Doe"
                />
              </div>
              <% if (typeof errorMessages !== 'undefined') { 
                const nameError = errorMessages.find(e => e.param === 'name');
                if (nameError) { %>
                  <p class="mt-1 text-sm text-red-600 flex items-center">
                    <i class="fas fa-exclamation-circle mr-1 text-xs"></i>
                    <%= nameError.msg %>
                  </p>
                <% } 
              } %>
            </div>

            <!-- Email Input -->
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Email address
              </label>
              <div class="relative">
                <div
                  class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                >
                  <i class="fas fa-envelope text-gray-400"></i>
                </div>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>"
                  class="w-full pl-10 pr-4 py-3 border <%= typeof errorMessages !== 'undefined' && errorMessages.find(e => e.param === 'email') ? 'border-red-300 focus:border-red-500 focus:ring-red-500' : 'border-gray-300 focus:ring-rose-500 focus:border-rose-500' %> rounded-lg focus:ring-2 transition-all duration-200 outline-none"
                  placeholder="you@example.com"
                />
              </div>
              <% if (typeof errorMessages !== 'undefined') { 
                const emailError = errorMessages.find(e => e.param === 'email');
                if (emailError) { %>
                  <p class="mt-1 text-sm text-red-600 flex items-center">
                    <i class="fas fa-exclamation-circle mr-1 text-xs"></i>
                    <%= emailError.msg %>
                  </p>
                <% } 
              } %>
            </div>

            <!-- Role Selection Dropdown -->
            <div>
              <label
                for="role"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                I want to join as
              </label>
              <div class="relative">
                <div
                  class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                >
                  <i class="fas fa-user-tag text-gray-400"></i>
                </div>
                <select
                  id="role"
                  name="role"
                  required
                  class="w-full pl-10 pr-4 py-3 border <%= typeof errorMessages !== 'undefined' && errorMessages.find(e => e.param === 'role') ? 'border-red-300 focus:border-red-500 focus:ring-red-500' : 'border-gray-300 focus:ring-rose-500 focus:border-rose-500' %> rounded-lg focus:ring-2 transition-all duration-200 outline-none appearance-none bg-white cursor-pointer"
                >
                  <option value="" disabled <%= typeof oldInput === 'undefined' || !oldInput.role ? 'selected' : '' %>>Select your role</option>
                  <option value="Guest" <%= typeof oldInput !== 'undefined' && oldInput.role === 'Guest' ? 'selected' : '' %>>Guest</option>
                  <option value="Host" <%= typeof oldInput !== 'undefined' && oldInput.role === 'Host' ? 'selected' : '' %>>Host</option>
                </select>
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                  <i class="fas fa-chevron-down text-gray-400"></i>
                </div>
              </div>
              <% if (typeof errorMessages !== 'undefined') { 
                const roleError = errorMessages.find(e => e.param === 'role');
                if (roleError) { %>
                  <p class="mt-1 text-sm text-red-600 flex items-center">
                    <i class="fas fa-exclamation-circle mr-1 text-xs"></i>
                    <%= roleError.msg %>
                  </p>
                <% } 
              } %>
              <p class="mt-1 text-xs text-gray-500">
                You can change this later in your account settings
              </p>
            </div>

            <!-- Password Input -->
            <div>
              <label
                for="password"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Password
              </label>
              <div class="relative">
                <div
                  class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                >
                  <i class="fas fa-lock text-gray-400"></i>
                </div>
                <input
                  type="password"
                  id="password"
                  name="password"
                  required
                  minlength="6"
                  value="<%= typeof oldInput !== 'undefined' ? oldInput.password : '' %>"
                  class="w-full pl-10 pr-10 py-3 border <%= typeof errorMessages !== 'undefined' && errorMessages.find(e => e.param === 'password') ? 'border-red-300 focus:border-red-500 focus:ring-red-500' : 'border-gray-300 focus:ring-rose-500 focus:border-rose-500' %> rounded-lg focus:ring-2 transition-all duration-200 outline-none"
                  placeholder="Create a strong password"
                />
                <button
                  type="button"
                  class="absolute inset-y-0 right-0 pr-3 flex items-center"
                  id="togglePassword"
                >
                  <i class="fas fa-eye text-gray-400 hover:text-gray-600"></i>
                </button>
              </div>
              <% if (typeof errorMessages !== 'undefined') { 
                const passwordError = errorMessages.find(e => e.param === 'password');
                if (passwordError) { %>
                  <p class="mt-1 text-sm text-red-600 flex items-center">
                    <i class="fas fa-exclamation-circle mr-1 text-xs"></i>
                    <%= passwordError.msg %>
                  </p>
                <% } 
              } %>
              <p class="mt-1 text-xs text-gray-500">
                Minimum 6 characters with letters and numbers
              </p>
            </div>

            <!-- Confirm Password Input -->
            <div>
              <label
                for="confirmPassword"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Confirm Password
              </label>
              <div class="relative">
                <div
                  class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                >
                  <i class="fas fa-lock text-gray-400"></i>
                </div>
                <input
                  type="password"
                  id="confirmPassword"
                  name="confirmPassword"
                  required
                  value="<%= typeof oldInput !== 'undefined' ? oldInput.confirmPassword : '' %>"
                  class="w-full pl-10 pr-4 py-3 border <%= typeof errorMessages !== 'undefined' && errorMessages.find(e => e.param === 'confirmPassword') ? 'border-red-300 focus:border-red-500 focus:ring-red-500' : 'border-gray-300 focus:ring-rose-500 focus:border-rose-500' %> rounded-lg focus:ring-2 transition-all duration-200 outline-none"
                  placeholder="Re-enter your password"
                />
              </div>
              <% if (typeof errorMessages !== 'undefined') { 
                const confirmPasswordError = errorMessages.find(e => e.param === 'confirmPassword');
                if (confirmPasswordError) { %>
                  <p class="mt-1 text-sm text-red-600 flex items-center">
                    <i class="fas fa-exclamation-circle mr-1 text-xs"></i>
                    <%= confirmPasswordError.msg %>
                  </p>
                <% } 
              } %>
            </div>

            <!-- Terms and Conditions -->
            <div class="flex items-start">
              <input
                type="checkbox"
                id="terms"
                name="terms"
                <%= typeof oldInput !== 'undefined' && oldInput.terms ? 'checked' : '' %>
                class="h-4 w-4 mt-1 text-rose-500 focus:ring-rose-500 border-gray-300 rounded <%= typeof errorMessages !== 'undefined' && errorMessages.find(e => e.param === 'terms') ? 'border-red-300' : '' %>"
              />
              <label for="terms" class="ml-2 block text-sm text-gray-700">
                I agree to the
                <a href="#" class="text-rose-500 hover:text-rose-600 font-medium">Terms of Service</a>
                and
                <a href="#" class="text-rose-500 hover:text-rose-600 font-medium">Privacy Policy</a>
              </label>
            </div>
            <% if (typeof errorMessages !== 'undefined') { 
              const termsError = errorMessages.find(e => e.param === 'terms');
              if (termsError) { %>
                <p class="text-sm text-red-600 flex items-center">
                  <i class="fas fa-exclamation-circle mr-1 text-xs"></i>
                  <%= termsError.msg %>
                </p>
              <% } 
            } %>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full py-3 px-4 bg-gradient-to-r from-rose-500 to-pink-500 text-white font-semibold rounded-lg hover:from-rose-600 hover:to-pink-600 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
            >
              Create Account
            </button>
          </form>

          <!-- Login Link -->
          <div class="mt-8 text-center">
            <p class="text-gray-600">
              Already have an account?
              <a
                href="/login"
                class="text-rose-500 hover:text-rose-600 font-semibold ml-1"
              >
                Login
              </a>
            </p>
          </div>
        </div>

        <!-- Footer Links -->
        <div class="mt-6 text-center">
          <div
            class="flex flex-wrap justify-center gap-4 text-sm text-gray-500"
          >
            <a href="#" class="hover:text-gray-700">Privacy Policy</a>
            <a href="#" class="hover:text-gray-700">Terms of Service</a>
            <a href="#" class="hover:text-gray-700">Cookie Policy</a>
            <a href="#" class="hover:text-gray-700">Help Center</a>
          </div>
          <p class="mt-4 text-sm text-gray-500">
            Â© 2024 Airbnb, Inc. All rights reserved.
          </p>
        </div>
      </div>
    </div>

    <!-- JavaScript -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Password toggle
        const togglePassword = document.getElementById("togglePassword");
        const passwordInput = document.getElementById("password");
        const confirmPasswordInput = document.getElementById("confirmPassword");
        const eyeIcon = togglePassword.querySelector("i");

        togglePassword.addEventListener("click", function () {
          const type =
            passwordInput.getAttribute("type") === "password"
              ? "text"
              : "password";
          passwordInput.setAttribute("type", type);
          confirmPasswordInput.setAttribute("type", type);

          // Toggle eye icon
          if (type === "password") {
            eyeIcon.classList.remove("fa-eye-slash");
            eyeIcon.classList.add("fa-eye");
          } else {
            eyeIcon.classList.remove("fa-eye");
            eyeIcon.classList.add("fa-eye-slash");
          }
        });

        // Role selection styling
        const roleSelect = document.getElementById("role");
        roleSelect.addEventListener("change", function() {
          if (this.value) {
            this.classList.remove("border-gray-300", "border-red-300");
            this.classList.add("border-rose-300", "bg-rose-50");
          } else {
            this.classList.remove("border-rose-300", "bg-rose-50");
            this.classList.add("border-gray-300");
          }
        });

        // Clear error styling on input
        const inputs = document.querySelectorAll('input, select');
        inputs.forEach(input => {
          input.addEventListener('input', function() {
            if (this.classList.contains('border-red-300')) {
              this.classList.remove('border-red-300', 'focus:border-red-500', 'focus:ring-red-500');
              this.classList.add('border-gray-300', 'focus:ring-rose-500', 'focus:border-rose-500');
            }
          });
          
          input.addEventListener('change', function() {
            if (this.classList.contains('border-red-300')) {
              this.classList.remove('border-red-300', 'focus:border-red-500', 'focus:ring-red-500');
              this.classList.add('border-gray-300', 'focus:ring-rose-500', 'focus:border-rose-500');
            }
          });
        });
      });
    </script>
  </body>
</html>